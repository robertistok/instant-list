{
  "name": "instant-list-client",
  "version": "1.0.0",
  "description": "UI for the instant list app",
  "main": "index.js",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "NODE_ENV=production next start -p $PORT",
    "test": "NODE_ENV=test jest --watch",
    "heroku-postbuild": "next build"
  },
  "author": "robertistok",
  "license": "ISC",
  "dependencies": {
    "@apollo/react-hooks": "^3.1.2",
    "@types/styled-components": "^4.1.18",
    "@zeit/next-css": "^1.0.1",
    "apollo-boost": "^0.4.4",
    "babel-plugin-styled-components": "^1.10.2",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "express": "^4.17.3",
    "graphql": "^14.3.1",
    "graphql-tag": "^2.10.1",
    "grommet": "^2.7.3",
    "grommet-icons": "^4.2.0",
    "less": "^3.9.0",
    "nanoid": "^2.0.3",
    "next": "^9.0.7",
    "next-compose-plugins": "^2.2.0",
    "next-with-apollo": "^4.3.0",
    "nprogress": "^0.2.0",
    "react": "^16.10.2",
    "react-apollo": "^3.1.2",
    "react-dom": "^16.10.2",
    "react-spring": "^8.0.25",
    "styled-components": "^4.3.1"
  },
  "devDependencies": {
    "@types/react": "^16.8.23",
    "babel-jest": "^24.8.0",
    "enzyme-to-json": "^3.3.5",
    "jest": "^24.8.0",
    "jest-transform-graphql": "^2.1.0",
    "tslint": "^5.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.3"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql",
      ".*": "babel-jest"
    }
  },
  "//": "babel config",
  "babel": {
    "env": {
      "development": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "production": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "test": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {
                "modules": "commonjs"
              }
            }
          ]
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      }
    }
  }
}
